---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import HeaderIcon from './HeaderIcon.astro';
---

<header class="m-0 px-1 bg-white">
  <nav class="flex items-center justify-between">
    <div class="m-0 text-xl font-bold">
      <a class="md:px-3 md:py-4 sm:px-1 sm:py-2 text-black hover:text-black" href="/"
        >{SITE_TITLE}</a
      >
    </div>
    <div class="flex">
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderIcon
        href="https://twitter.com/nakamo326"
        iconName="mingcute:twitter-line"
        srText="Follow Me on Twitter"
      />
      <HeaderIcon
        href="https://github.com/nakamo326"
        iconName="mingcute:github-line"
        srText="Follow Me on GitHub"
      />
      <HeaderIcon
        href="https://nakamo326.com/rss.xml"
        iconName="mingcute:rss-2-line"
        srText="Feed RSS"
      />
    </div>
  </nav>
</header>
