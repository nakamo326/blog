---
import type { CollectionEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const props: Props = Astro.props;
const { title, description, pubDate, updatedDate, heroImage } = props;
---

<Layout title={title} description={description}>
  <main class="w-[96%] max-w-[100%] m-auto md:px-4 md:py-12 sm:p-4">
    <article>
      <div class="w-full">
        {
          heroImage && (
            <img
              class="block my-0 mx-auto rounded-xl shadow-xl shadow-gray/35"
              width={1020}
              height={510}
              src={heroImage}
              alt=""
            />
          )
        }
      </div>
      <div class="w-[720px] max-w-[96%] m-auto p-5 text-gray-dark">
        <div class="mb-5 py-5 text-center">
          <h1 class="mb-5">{title}</h1>
          <div class="text-gray mb-3">
            <FormattedDate date={pubDate} />
            {
              updatedDate && (
                <div class="italic">
                  Last updated on <FormattedDate date={updatedDate} />
                </div>
              )
            }
          </div>
          <hr />
        </div>
        <slot />
      </div>
    </article>
  </main>
</Layout>
